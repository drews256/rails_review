<p id="notice"><%= notice %></p>
<div class=row>
  <div class="col-md-8 col-md-offset-2">
    <h1>The Stuntz Rails Review Message Board</h1>

    <table class="table">
      <thead>
      <tr>
        <th>Post</th>
        <th>Author</th>
        <th colspan="3"></th>
        <th>Comments</th>
      </tr>
      </thead>

      <tbody>
      <% if current_user %>
          <% @posts.each do |post| %>
              <tr>
                <td><%= post.title %></td>
                <td><%= post.user.first_name %> </td>
                <td><%= link_to 'Show', post, class: 'btn btn-default' %></td>
                <% if post.user_id == current_user.id %>
                    <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-default' %></td>
                    <td><%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
                <% else %>
                    <td></td>
                    <td></td>
                <% end %>

                <td> <%= post.comments.length %>  </td>

              </tr>
          <% end %>
      <% end %>
      </tbody>
    </table>

    <br>
    <%= will_paginate @posts %>
    <% if current_user %>
        <%= link_to 'New Post', new_post_path, class:"btn btn-default" %>
    <% end %>
  </div>
</div>
<p id="notice"><%= notice %></p>


<div class = row>
  <div class="col-md-10 col-md-offset-1">
    <h3>Users</h3>
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Registered</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.to_date %></td>
          <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
          <td>
            <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Change role</a>
            <%= render user %>
          </td>
          <td><%= link_to "Edit", edit_user_path(user), :class => 'btn btn-mini' %></td>
          <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <div class="pagination-wrapper">
    <%= page_navigation_links @users if @users.present? %>
  </div>
    </div>
  </div>